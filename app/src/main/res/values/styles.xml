<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="cornerRadius">@dimen/btn_radius</item>
        <item name="iconTint">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/ico_padding</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="MainToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="title">@string/app_name</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="titleTextColor">@color/white</item>
    </style>
    <style name="SettingToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="title">@string/Settings</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="titleTextColor">@color/black</item>
    </style>
    <style name="TextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawablePadding">@dimen/padding_16</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:paddingTop">@dimen/padding_12</item>
        <item name="android:paddingBottom">@dimen/padding_12</item>
        <item name="android:paddingEnd">@dimen/padding_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="SwitchStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:paddingEnd">@dimen/padding_12</item>
        <item name="android:paddingTop">@dimen/padding_12</item>
        <item name="android:paddingBottom">@dimen/padding_12</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
</resources>