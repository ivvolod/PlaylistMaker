<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ClearButtonStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">false</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:src">@android:drawable/ic_menu_close_clear_cancel</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>
    <style name="MainToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="title">@string/app_name</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="titleTextColor">@color/white</item>
    </style>
    <style name="SettingToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="title">@string/Settings</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="titleTextColor">@color/white</item>
    </style>
    <style name="SearchToolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="title">@string/Search</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="titleTextColor">@color/white</item>
    </style>
    <style name="TextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawablePadding">@dimen/padding_16</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:paddingTop">@dimen/padding_12</item>
        <item name="android:paddingBottom">@dimen/padding_12</item>
        <item name="android:paddingEnd">@dimen/padding_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="SwitchStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:paddingEnd">@dimen/padding_12</item>
        <item name="android:paddingTop">@dimen/padding_12</item>
        <item name="android:paddingBottom">@dimen/padding_12</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="EditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">@dimen/padding_8</item>
        <item name="android:drawableStart">@drawable/ic_search_black</item>
        <item name="android:padding">@dimen/padding_14</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">100</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

</resources>